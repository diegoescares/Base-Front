include ./mixins.jade

- share_url         = ""
- share_image       = ""
- share_description = ""
- share_title       = ""
- share_twitter     = ""

- SITE_URL          = "<?php echo 'http://'.$_SERVER['SERVER_NAME'].dirname($_SERVER['PHP_SELF']).'/' ?>"
- TEMPLATE_URL      = "<?php echo 'http://'.$_SERVER['SERVER_NAME'].dirname($_SERVER['PHP_SELF']).'/' ?>"

- fbsdk             = false
- gmaps             = false

block vars


doctype html
html(lang="es")

	head
		
		title=share_title

		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		meta(name='description', content=share_description)

		// Meta tags facebook
		meta(property='og:title', content=share_title)
		meta(property='og:description', content=share_description)
		meta(property='og:url', content=share_url)
		meta(property='og:image', content=share_image)

		// Meta tags twitter cards
		meta(name='twitter:title', content=share_title)
		meta(name='twitter:description', content=share_description)
		meta(name='twitter:creator', content=share_twitter)
		meta(name='twitter:site', content=share_url)
		meta(name='twitter:card', content=share_image)
		meta(name='twitter:image:src', content=share_image)
		
		// Style
		block styles
		link(href=TEMPLATE_URL+'css/main.css', rel='stylesheet', type='text/css')
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,700', rel='stylesheet', type='text/css')
		link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', rel='stylesheet', type='text/css')
		link(href=TEMPLATE_URL+'img/favicon.ico', rel='shortcut icon')
		
		// Scripts
		block scripts
		if gmaps
			script(src='http://maps.google.com/maps/api/js?sensor=false')
		if fbsdk
			script(src="//connect.facebook.net/en_US/sdk.js")
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
		script(src=TEMPLATE_URL+'js/main.js')


		//[if lt IE 9]> <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script> <![endif]
	

	body

