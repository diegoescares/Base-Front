
col_sep          = 20px

col_sep_normal   = 0 0 col_sep col_sep
col_sep_normal_m = 0 0 col_sep*-1 col_sep*-1

col_sep_half     = 0 0 col_sep/2 col_sep/2
col_sep_half_m   = 0 0 col_sep/-2 col_sep/-2

col_sep_double   = 0 0 col_sep*2 col_sep*2
col_sep_double_m = 0 0 col_sep*-2 col_sep*-2


.cols
	overflow hidden
	.col
		float left
		&.col-right // Reading inverse
			float right

	.row // Es mejor usar isotope, usar rows sólo en emergencias
		overflow hidden
		@media break3
			overflow visible

	// Cols overflow visible
	&.cols-ov
		overflow visible
		&:after
			content ""
			clear both
			display block

	// Separación normal
	margin col_sep_normal_m
	.col
		padding col_sep_normal

	// Separación media
	&.cols-halfsep
		margin col_sep_half_m
		.col
			padding col_sep_half

	// Separación doble
	&.cols-doublesep
		margin col_sep_double_m
		.col
			padding col_sep_double

	// Separación 0
	&.cols-nosep
		margin 0
		.col
			padding 0

			
	// Tamaños porcentuales
	.col
	.col.col-nobreak
		width 100%
		&.col-20
			width 20%
		&.col-25
			width 25%
		&.col-30
			width 30%
		&.col-33
			width 33.33%
		&.col-40
			width 40%
		&.col-50
			width 50%
		&.col-60
			width 60%
		&.col-66
			width 66.66%
		&.col-70
			width 70%
		&.col-75
			width 75%
		&.col-80
			width 80%


@media break3
	.cols
		.col
			&.col-20
			&.col-25
				width 33.33%
			&.col-30
			&.col-33
				width 50%
			&.col-66
			&.col-70
			&.col-75
			&.col-80
				width 100%

			&.col-to100
				width 100%

			&.col-60-break3
				width 60%
			&.col-50-break3
				width 50%
			&.col-40-break3
				width 40%

	.cols
		&.cols-doublesep
			margin col_sep_normal_m
			.col
				padding col_sep_normal


@media break2
	.cols
		.col
			&.col-20
			&.col-25
				width 50%
			&.col-33
			&.col-40
			&.col-50
			&.col-60
				width 100%

			&.col-60-break3
			&.col-50-break3
			&.col-40-break3
				width 100%
	

@media break1

	.cols
		.col:not(.col-nobreak):not(.col-nobreak1)
			&.col-20
			&.col-25
			&.col-30
			&.col-33
				width 100%
	
	if sep_half_break1
		.cols
		.cols.cols-doublesep
			margin col_sep_half_m
			.col
				padding col_sep_half
	
	.cols.cols-nosep-break1
		margin 0
		.col
			padding 0

