
// lightbox = alert
// Con botones de cerrar y aceptar, es responsive, adaptable a la altura con scroll automatico y centrado vertical/horizontal automatico con js


body.alert-in
	overflow hidden

.alert
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	overflow auto
	animation fadeIn .5s ease
	z-index 100
	display none
	&.in
		display block
	&.out
		animation fadeOut .2s ease both
	.alert-light
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background rgba(0,0,0,.5)
	.alert-box
		max-width 600px
		margin 0 auto
		animation slideFadeUp .5s ease
		overflow hidden

		.alert-inner
			padding 20px
			margin 20px
			radius 5px
			background white

		.alert-close
			position absolute
			top 10px
			right 10px
			circle 30px
			background dark
			color #FFF
			.fa
				vertical-align 0
			&:hover
				background color
		
		.alert-content
			margin-bottom 10px

		.alert-buttons
			text-align center

		iframe
			display block
			width 100%

	&.alert-default
		text-align center


