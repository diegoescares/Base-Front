*
	margin 0
	padding 0
	border 0
	outline 0


body
	-webkit-font-smoothing antialiased
	background white


body, button, input, textarea, select
	font-family fuente1
	color black
	font-size 14px
	line-height 20px

a, button, input, textarea, select
	transition .2s ease

a
	color secondary_color
	text-decoration none

a, input, button, select
	transition tnormal

button, select, input[type='submit']
	&:hover
		cursor pointer

h1, h2, h3, h4
	font-family fuente2

h1
	font-size 64px
	line-height 54px
	font-weight bold
	color primary_color
	@media break1
		font-size 44px
		line-height 34px

h2
	font-size 25px
	line-height 25px
	&.big
		font-size 38px
		line-height 38px
h3
	font-size 20px
	line-height 24px
h4
	font-size 16px
	line-height 20px

ul
ol
	list-style-type none


.inner
	padding 20px
@media break1
	.inner
		padding 10px


.limit
	max-width limit
	margin 0 auto
	position relative


.in
	display block
	animation fadeIn .5s ease both
	&.out
		animation fadeOut .5s ease both


.clear
	clear both
.center
	text-align center
.left
	text-align left
.right
	text-align right
.float-right
	float right
.float-left
	float left

.overflow
	overflow hidden
.none
	display none




.nomobile
	display block
.mobile
	display none
@media break1
	.nomobile
		display none
	.mobile
		display block






.content
	font-size 15px
	line-height 24px

	h1
		margin-bottom 20px
		color primary_color
	h2, h3, h4
		margin-bottom 10px
		color primary_color
		padding-top 10px
	p, ol, ul, table
		margin-bottom 15px
	img,
	iframe
		max-width 100%
		display block
	ul
		list-style-type disc
	ol
		list-style-type decimal
	ol,ul
		margin-left 30px
		li
			margin-bottom 5px
	blockquote
		padding 15px 15px 1px 35px
		background url(../img/icons/cite.png) 15px 15px no-repeat white
		border-left 2px solid secondary_color
		font-size 1.2em
		line-height 1.25em
		font-style italic
		margin-bottom 15px
	.important
		background #FFC
		padding 15px 15px 1px
		margin-bottom 15px
	a
		text-decoration none
		color green
		&:hover
			text-decoration underline







.button, .button.button
	font-family fuente1
	font-size 14px
	line-height 18px
	radius rad2
	padding 6px 15px
	text-decoration none
	display inline-block
	text-transform uppercase
	font-weight bold
	border 0
	width auto
	margin-bottom 2px
	background #DDD
	color #666
	transition tnormal
	text-align center
	&:hover
		cursor pointer
		color #FFF
		background primary_color
	&.button-primary
		color white
		background primary_color
		&:hover
			background lighten(primary_color,10%)
	&.button-secondary
		color white
		background lighten(secondary_color,10%)
		&:hover
			background lighten(secondary_color,20%)
	&.button-small
		font-size 12px
		line-height 11px
		padding 6px 8px
	&.button-medium
		font-size 18px
		line-height 18px
		padding 10px 22px
	&.button-big
		font-size 20px
		line-height 20px
		padding 12px 25px
		radius rad
	&.button-line
		border 1px solid #DDD
		background transparent
		color white
		&:hover
			background primary_color
			border-color primary_color
	&.button-disabled
		background #999
		border-color #999
		&:hover
			background #999
			border-color #999
			cursor default







