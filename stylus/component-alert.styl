
// lightbox = alert
// Con botones de cerrar y aceptar, es responsive, adaptable a la altura con scroll automatico y centrado vertical/horizontal automatico con js



.equidist
	position absolute
	top 0
	left 0
	

.alert
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	overflow auto
	-webkit-overflow-scrolling touch
	animation fadeIn .5s ease
	z-index 100
	display none
	.button
		padding 7px 20px 5px
	&.in
		display block
	&.out
		animation fadeOut .2s ease both
	.alert-light
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background rgba(50,50,50,.5)
	.alert-box
		width 500px
		animation slideFadeUp .5s ease
		@media all and (max-width:600px)
			width 100%

		h2
			padding 0
			margin-bottom 10px
			color primary_color
			text-align center
		p
			margin-bottom 20px

		.alert-content
			overflow hidden
			text-align center

		.inner
			padding 20px 20px 5px
			margin 20px
			radius 5px
			border 0
			background white
			.buttons
				margin-bottom 20px
			.close
				position absolute
				top 10px
				right 10px
				width 30px
				height 30px
				radius 30px
				line-height 28px
				background gray
				color #FFF
				&:hover
					background lighten(primary_color,10%)




			.botones
				text-align right

			iframe
				width 100% !important




