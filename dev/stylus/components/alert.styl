
// lightbox = alert
// Con botones de cerrar y aceptar, es responsive, adaptable a la altura con scroll automatico y centrado vertical/horizontal automatico con js


body.alert-in
	overflow hidden

.equidist
	position absolute
	top 0
	left 0
	

.alert
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	overflow auto
	animation fadeIn .5s ease
	z-index 100
	display none
	.button
		padding 7px 20px 5px
	&.in
		display block
	&.out
		animation fadeOut .2s ease both
	.alert-light
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background rgba(0,0,0,.5)
	.alert-box
		max-width 800px
		animation slideFadeUp .5s ease

		.alert-inner
			padding 20px
			margin 20px
			radius 5px
			background white

		.alert-close
			position absolute
			top 10px
			right 10px
			width 30px
			height 30px
			radius 30px
			line-height 28px
			background darkgray
			color #FFF
			&:hover
				background color

		.alert-title
			margin 0
			color color

		.alert-content
			padding-top 15px
			overflow hidden

		.alert-buttons
			text-align center
			padding-top 15px

		iframe
			width 100%

	&.alert-default
		text-align center


