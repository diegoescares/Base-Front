
// FUNCIONES

radius()
	border-radius arguments

placeholder()
	&::-webkit-input-placeholder
		color arguments
	&::-moz-placeholder
		color arguments
	&:-moz-placeholder
		color arguments
	&:-ms-input-placeholder
		color arguments

appearance()
	-webkit-appearance arguments
	-moz-appearance arguments
	appearance arguments

overflow()
	overflow arguments
	if arguments == "auto" || arguments == "scroll"
		-webkit-overflow-scrolling touch

tap()
	if arguments == "0"
		-webkit-tap-highlight-color rgba(0,0,0,0)
	else
		-webkit-tap-highlight-color arguments

triangle(width,direction,color)
	position absolute
	border width solid transparent
	if direction=="top"
		border-bottom-color color
		bottom 100%
		left 50%
		margin-left width*-1
	if direction=="right"
		border-left-color color
		left 100%
		top 50%
		margin-top width*-1
	if direction=="bottom"
		border-top-color color
		top 100%
		left 50%
		margin-left width*-1
	if direction=="left"
		border-right-color color
		right 100%
		top 50%
		margin-top width*-1

circle()
	width arguments
	height arguments
	line-height arguments
	text-align center
	radius 50%
	overflow hidden

plane()
	position arguments
	top 0
	left 0
	width 100%
	height 100%

centre(width,height)
	position absolute
	top 50%
	left 50%
	width width
	height height
	margin-left (width/-2)
	margin-top (height/-2)

animation-stagger(iterations,delay)
	iterations -= 1
	for iteration in (0..iterations)
		&:nth-child({iteration})
			animation-delay delay*iteration


