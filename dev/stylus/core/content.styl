

.content
	font-size 15px
	line-height 24px

	h1
		margin-bottom 15px

	h2, h3, h4
		padding-top 10px
		margin-bottom 15px

	p, ol, ul, table
		margin-bottom 15px

	img,
	iframe
		max-width 100%
		display block

	iframe
		width 100%
		@media break1
			height 200px

	ul
		list-style-type disc
	ol
		list-style-type decimal
	ol,ul
		margin-left 30px
		li
			margin-bottom 5px

	blockquote
		padding 15px 15px 1px 35px
		background url(../img/icon-cite.png) 15px 15px no-repeat
		border-left 2px solid color
		font-size 1.2em
		line-height 1.5em
		font-style italic
		margin-bottom 15px

	.important
		background yellow
		padding 15px 20px 1px
		margin-bottom 15px
		
	a
		text-decoration none
		color color_2
		&:hover
			text-decoration underline

	// WP

	img
		&.alignright
			float right
			margin-left 20px
		&.alignleft
			float left
			margin-right 20px
		&.aligncenter
			margin 0 auto




