

.content
	font-size global_size+1
	line-height 26px

	h1, h2, h3, h4,	p, ol, ul, table, blockquote, pre, iframe
		margin-bottom sep
		&:last-child
			margin-bottom 0

	h1, h2, h3, h4, h5
		padding-top 10px
		&:first-child
			padding-top 0

	ul
		list-style-type disc
	ol
		list-style-type decimal
	ol,ul
		margin-left 20px
		li
			margin-bottom 5px

	blockquote
		padding 10px sep
		padding-left 40px
		border-left 2px solid color
		font-size 1.2em
		line-height 1.5em
		font-style italic
		position relative
		&:before
			content "\f10d"
			font-family "FontAwesome"
			position absolute
			top 0
			left 10px
			opacity .5
			display inline-block
			padding-right 2px
		
	pre
		background rgba(0,0,0,.05)
		padding 10px sep
		overflow auto

	img
		// WP
		&.alignright
			@media $break-sm
				float right
				margin-left 20px
		&.alignleft
			@media $break-sm
				float left
				margin-right 20px
		&.aligncenter
			margin 0 auto
			
		opacity 0
		&.img-loaded
			animation fadeIn .5s ease
			opacity 1

	iframe
		width 100%
		max-width 100%
		display block
		height 200px
		background lighter
		@media $break-sm
			height 300px
		@media $break-md
			height 400px

	a
		text-decoration none
		&:hover:not(.button)
			text-decoration underline
			

