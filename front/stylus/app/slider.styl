
@keyframes sliderSlideOut
	100%
		transform scale(1.1)
		opacity 0
		


.slider
	position relative
	animation fadeIn .5s ease backwards
	overflow hidden

	.slider-slides-generate
		display none

	.slider-slides
		position relative
		overflow hidden

	.slide
		opacity 0
		position relative
		overflow hidden
		display none
		&.slide-active
			display block
			opacity 1
			z-index 1
			animation fadeIn .5s ease
		&.slide-out
			cover absolute
			display block
			opacity 1
			z-index 2
			animation fadeOut .5s ease both

			
	.slider-bullets
		position absolute
		bottom 25px
		z-index 3
		text-align center
		width 100%
		.slider-bullet
			circle 8px
			background white
			display inline-block
			margin 0 2px
			transition tn
			opacity .5
			&.slider-bullet-active
				opacity 1
			&:hover
				cursor pointer
		
	
	.slider-navigation
		.slider-nav
			position absolute
			bottom 50%
			circle 50px
			margin-bottom -25px
			color white
			z-index 3
			transition tn
			opacity .5
			@media break3
				margin-bottom 0
				bottom 20px
			@media break2
				circle 30px
				line-height 28px
			.fa
				font-size 30px
				vertical-align middle
				@media break2
					font-size 20px
				
			&.slider-nav-left 
				left 20px
				.fa
					margin-left -4px
				
			&.slider-nav-right
				right 20px
				.fa
					margin-right -4px
				
			&:hover
				cursor pointer
				opacity 1


	&.slider-directional
		&.slider-dir-left
			.slide
				&.slide-active
					animation slideRight .5s ease both
				&.slide-out
					animation slideRightOut .5s ease both
		&.slider-dir-right
			.slide
				&.slide-active
					animation slideLeft .5s ease both
				&.slide-out
					animation slideLeftOut .5s ease both




