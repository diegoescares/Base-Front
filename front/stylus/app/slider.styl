


.slider
	position relative
	animation fadeIn .5s ease backwards
	overflow hidden

	.slider-slides
		position relative
		overflow hidden

	.slide
		position relative
		overflow hidden
		display none
		&.slide-current
			display block
			z-index 1
		&.slide-out
			cover absolute
			display block
			z-index 2

			
	.slider-bullets
		position absolute
		bottom 25px
		z-index 3
		text-align center
		width 100%
		.slider-bullet
			circle 8px
			background white
			display inline-block
			margin 0 2px
			transition tn
			opacity .5
			&.slider-bullet-current
				opacity 1
			&:hover
				cursor pointer
		
	
	.slider-navigation
		.slider-nav
			position absolute
			bottom 50%
			margin-bottom -25px
			color white
			z-index 3
			transition tn
			background rgba(0,0,0,.5)
			opacity .5
			circle 30px
			border 0
			@media $break-md
				circle 50px
				font-size 150%
				
			&.slider-nav-left 
				left 20px
				.fa
					margin-left -5px
				
			&.slider-nav-right
				right 20px
				.fa
					margin-right -5px
				
			&:hover
				cursor pointer
				opacity 1
				background color


	&.slider-dir-left
		.slide
			&.slide-current
				animation slideRight .5s cb
			&.slide-out
				animation slideRightOut .5s cb both

	&.slider-dir-right
		.slide
			&.slide-current
				animation slideLeft .5s cb
			&.slide-out
				animation slideLeftOut .5s cb both

	&.slider-fade
		&.slider-dir-left
		&.slider-dir-right
			.slide
				&.slide-current
					animation fadeIn .5s cb
				&.slide-out
					animation fadeOut .5s cb both


	&.slider-cover
		cover absolute
		.slider-slides
		.slide
			cover absolute

