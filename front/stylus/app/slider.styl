


.slider
	position relative
	animation fadeIn .5s ease backwards
	overflow hidden

	.slider-slides-generate
		display none

	.slider-slides
		position relative
		overflow hidden

	.slide
		opacity 0
		position relative
		overflow hidden
		display none
		&.slide-active
			display block
			opacity 1
			z-index 1
			animation fadeIn .5s ease
		&.slide-out
			cover absolute
			display block
			opacity 1
			z-index 2
			animation fadeOut .5s ease both

			
	.slider-bullets
		position absolute
		bottom 25px
		z-index 3
		text-align center
		width 100%
		.slider-bullet
			circle 8px
			background white
			display inline-block
			margin 0 2px
			transition tn
			opacity .5
			&.slider-bullet-active
				opacity 1
			&:hover
				cursor pointer
		
	
	.slider-navigation
		.slider-nav
			position absolute
			bottom 50%
			margin-bottom -25px
			color white
			z-index 3
			transition tn
			background rgba(0,0,0,.5)
			opacity .5
			circle 30px
			@media $break-md
				circle 50px
			.fa
				vertical-align middle
				font-size 20px
				
			&.slider-nav-left 
				left 20px
				.fa
					margin-left -5px
				
			&.slider-nav-right
				right 20px
				.fa
					margin-right -5px
				
			&:hover
				cursor pointer
				opacity 1


	&.slider-directional
		&.slider-dir-left
			.slide
				&.slide-active
					animation slideRight .5s ease both
				&.slide-out
					animation slideRightOut .5s ease both
		&.slider-dir-right
			.slide
				&.slide-active
					animation slideLeft .5s ease both
				&.slide-out
					animation slideLeftOut .5s ease both




