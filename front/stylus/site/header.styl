
$header_height = 60px

header
	top 0
	width 100%
	z-index 10
	position relative
	height $header_height
	background white
	box-shadow shadow_2
	@media $break-md
		position fixed
	
	a
		color gray

	&.header-lighter
		background lighter

	&.header-light
		background light

	&.header-dark
		background dark
		color white
		a
			color white

	&.header-color
		background color
		color white
		a
			color white
	
	.header-limit
		max-width limit
		margin 0 auto
		position relative
	
	.header-left
		float left

	.header-right
		float right
		
	.header-logo
		a
			display block
			height $header_height
			line-height $header_height - 2 // 2 = fix line-height for vertical align middle element
			padding 0 sep
			img
				display inline-block
				vertical-align middle
				max-height 40px
				max-width 150px
				width auto
				height auto

	.header-button
		padding 0 20px
		line-height $header_height - 2

	.header-nav
		position fixed
		top 0
		right 0
		width 260px
		height 100%
		background black
		z-index 5
		overflow hidden
		display none
		&.in
			display block
			animation slideLeft .5s cb backwards
		&.out
			display block
			animation slideRightOut .5s cb forwards

		@media $break-md
			display block
			position relative
			width auto
			height auto
			overflow visible
			background none
		
		.header-nav-back
			@media $break-md
				display none

		ul
			li
				border-bottom 1px solid rgba(255,255,255,.1)
				@media $break-md
					border-bottom 0
					display inline-block
					position relative
					&:hover
						>ul
							display block
				a
					padding 20px
					display block
					.fa
						opacity .5
						padding 2px 0
						&.fa-angle-left
							float left
							margin-right 10px
						&.fa-angle-right
							float right
							margin-left 10px
				ul
					background dark
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					display none
					animation fadeIn .2s ease backwards
					box-shadow shadow_2
					@media $break-md
						top 100%
						left 0%
						height auto
					&.in
						display block
						animation slideLeft .5s cb backwards
					&.out
						display block
						animation slideRightOut .5s cb forwards

					li
						display block
						@media $break-md
							position static
						a
							color white
						ul
							@media $break-md
								top 0
								left 100%


	.header-hamburger
		position fixed
		top 10px
		right 10px
		width 40px
		height @width
		line-height @width
		z-index 6
		text-align center
		background color
		@media $break-md
			display none

	.header-menu-button
		z-index 2
		position fixed
		top 0
		right 0
		background dark
		display block
		@media $break-md
			display none
	
	.header-menu
		z-index 1
		position fixed
		top 0
		right 0
		height 100%
		overflow hidden
		@media $break-md
			display none

		.header-menu-inner
			background dark
			height 100%
			width 320px
			position relative
			max-width 100%
			margin 0 0 0 auto

		.secretmenu-lvl
			background dark

		.header-menu-content
			ul
				li
					a
						padding 20px
						display block
						color white
						border-bottom 1px solid rgba(255,255,255,.1)
					ul
						display none
						display block
						cover absolute
						overflow auto
						opacity .5
						display none



#body
	@media $break-md
		padding-top $header_height

