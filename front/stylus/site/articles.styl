

article
	position relative
	overflow hidden
	background white
	color dark
	opacity 0
	margin-bottom 20px
	&:last-child
		margin-bottom 0
	&.article-loaded
		opacity 1
		animation fadeIn .5s ease backwards
		animation-stagger 5, .1s
	
	.article-image
		img
			width 100%

	.article-body
		padding sep

	.article-cover
		position absolute
		width 100%
		left 0
		bottom 0
		padding sep

	.article-title
		a
			display block
			&:after
				content ""
				cover absolute
	
	.article-title
	.article-description
		margin-bottom 10px
		&:last-child
			margin-bottom 0

	.article-category
		margin-bottom 5px
		a
			position relative
			z-index 2
			display inline-block
			padding 2px 10px
			background color
			color white

	.article-date
		opacity .5
		margin-bottom 5px
	
	.article-shares
		a
			position relative
			z-index 2
			display inline-block
			circle 30px
			margin-right 2px
			padding 0


	//&.article-default


	&.article-min
		margin-bottom 1px
		&:last-child
			margin-bottom 0
		.article-body
			overflow hidden
			padding 10px
		.article-title
			title h4
			margin-bottom 5px
		.article-image
			float left
			padding 10px
			margin-right -10px
			width 100px
			@media $break-md
				width 140px

	&.article-bg
		height 500px
		color white
		background dark
		//margin 0
		.article-image
			grad-shadow 200px 100px black
		.article-title
			a
				color white


