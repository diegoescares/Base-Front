

article
	position relative
	overflow hidden
	background-color white
	color dark
	margin-bottom 20px
	animation fadeIn .5s ease
	&:last-child
		margin-bottom 0
	
	.article-image
		background-color light
		position relative
		img
			width 100%
			opacity 0
	&.article-loaded
		.article-image
			img
				opacity 1
				animation fadeIn .5s ease

	.article-body
		padding sep

	.article-cover
		position absolute
		width 100%
		left 0
		bottom 0
		padding sep

	.article-title
		a
			display block
			&:after
				content ""
				cover absolute
	
	.article-title
	.article-description
		margin-bottom 10px
		&:last-child
			margin-bottom 0

	.article-category
		margin-bottom 5px
		a
			position relative
			z-index 2
			display inline-block
			padding 2px 10px
			background color
			color white

	.article-date
		opacity .5
		margin-bottom 5px
		font-size 90%
	
	.article-shares
		a
			position relative
			z-index 2
			display inline-block
			circle 30px
			margin-right 2px
			padding 0


	//&.article-default


	&.article-min
		margin-bottom 1px
		padding 10px
		&:last-child
			margin-bottom 0
		.article-body
			overflow hidden
			padding 0
		.article-title
			title h4
			margin-bottom 5px
		.article-image
			float left
			width 100px
			margin-right 10px
			@media $break-md
				width 140px

	&.article-bg
		height 500px
		color white
		background dark
		.article-image
			cover absolute
			opacity .2
			transition .4s ease
			// grad-shadow 200px 100px black
		&:hover
			.article-image
				opacity .4
		.article-title
			a
				color white
		.button
			&:after
				top auto
				bottom 0
				height 600px

		&.article-bg-big
			@media $break-lg
				height 600px
				.article-cover
					padding sep*2
	

	&.article-circle
		max-width 300px
		margin 20px 10px 0
		display inline-block
		vertical-align top
		background transparent
		.article-image
			background transparent
			max-width 200px
			margin 0 auto 10px
			border 1px solid light
			padding 5px
			radius 50%
			.article-circle
				position relative
				radius 50%
				proportion 1,1
				overflow hidden
				z-index 1
				background lighter
		.article-body
			padding 0
		.article-social
			a
				display inline-block
				circle 30px, 1
				background color
				color white
				margin 2px
				.fa
					vertical-align middle

	&.article-photo
		background lighter
		radius rad
		z-index 1
		height 200px
		@media $break-sm
			height 280px

		.article-open
			cover absolute
			transition .4s ease
			opacity 0
			background rgba(dark,80%)

		.article-icon
			centrecircle 50px
			background white
			font-size 140%

		&:hover
			.article-open
				opacity 1

