

article
	position relative
	overflow hidden
	background-color white
	color dark
	margin-bottom 20px
	animation fadeIn .5s ease
	&:last-child
		margin-bottom 0
	
	.article-image
		background-color light
		position relative
		img
			width 100%
			opacity 0
	&.article-loaded
		.article-image
			img
				opacity 1
				animation fadeIn .5s ease

	.article-body
		padding sep

	.article-cover
		position absolute
		width 100%
		left 0
		bottom 0
		padding sep

	.article-title
		a
			display block
			&:after
				content ""
				cover absolute
	
	.article-title
	.article-description
		margin-bottom 10px
		&:last-child
			margin-bottom 0

	.article-category
		margin-bottom 5px
		a
			position relative
			z-index 2
			display inline-block
			padding 2px 10px
			background color
			color white

	.article-date
		opacity .5
		margin-bottom 5px
	
	.article-shares
		a
			position relative
			z-index 2
			display inline-block
			circle 30px
			margin-right 2px
			padding 0


	//&.article-default


	&.article-min
		margin-bottom 1px
		padding 10px
		&:last-child
			margin-bottom 0
		.article-body
			overflow hidden
			padding 0
		.article-title
			title h4
			margin-bottom 5px
		.article-image
			float left
			width 100px
			margin-right 10px
			@media $break-md
				width 140px

	&.article-bg
		height 500px
		color white
		background dark
		.article-image
			cover absolute
			grad-shadow 200px 100px black
		.article-title
			a
				color white


