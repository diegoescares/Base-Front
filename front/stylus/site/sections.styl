
section
	position relative
	background-color white

	&:nth-child(odd)
		background-color lighter
	
	&.section-white
		background-color white
		
	&.section-lighter
		background-color lighter
				
	&.section-dark
		background-color dark
		color white
		
	&.section-black
		background-color black
		color white
		
	&.section-color
		background-color color
		color white

	&.section-color-2
		background-color color_2
		color white

	&.section-center
		text-align center

	.section-bg.bg.bg-loaded
		opacity .2

	.section-limit
		position relative
		max-width limit
		margin 0 auto
		padding sep*2 sep
		@media $break-md
			padding sep*2
		@media $break-md
			padding sep*4 sep*2

	.section-content
		max-width limit_3
		margin 0 auto 20px
		&:last-child
			margin-bottom 0
		&>*
			margin-bottom sep
			&:last-child
				margin-bottom 0

	.section-content-va
		min-height 400px
		line-height 400px
		position relative
		.section-content
			display inline-block
			vertical-align middle
			line-height global_lh

	.section-subtitle
		@media $break-md
			font-weight 300
			font-size 120%
			line-height 140%
		@media $break-lg
			font-size 140%
			line-height 160%

	.section-buttons
		.button
			margin-top 5px
			margin-bottom 5px
	&.section-map
		.section-map
			cover absolute
			z-index 1
		.section-limit
			overflow hidden
		.section-map-box
			float left
			max-width 400px
			z-index 2
			position relative

	&.section-map2
		.section-map
			position absolute
			right 0
			top 0
			height 100%


	&.section-logos
		text-align center
		a
			display inline-block
			max-width 180px
			height 60px
			line-height 60px - 2
			vertical-align middle
			margin 10px 20px
			text-align center
			filter grayscale(1)
			transition .4s ease
			img
				max-height 60px
				max-width 100%
				display inline-block
				vertical-align middle
			&:hover
				filter grayscale(0)


	&.section-logos2
		a
			display inline-block
			width 33.33%
			@media $break-md
				width 25%
			height 100px
			line-height 60px - 2
			vertical-align middle
			text-align center
			filter grayscale(1)
			transition .4s ease
			border border
			margin-right -1px
			margin-top -1px
			padding 20px
			img
				width 180px
				max-height 60px
				max-width 100%
				display inline-block
				vertical-align middle
			&:hover
				filter grayscale(0)





