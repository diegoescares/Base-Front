// CSS vars
shadow              = 1px 1px 0px rgba(0,0,0,.4)
shadow_2            = 0 0 10px rgba(0,0,0,.1)
border              = 1px solid light
rad                 = 5px
rad_2               = 2px
tn                  = .2s ease


// Proportional titles 

title_base          = 18px
title_aument        = 10px
title_lineheight    = 1.1
title_uppercase     = true
title_bold          = false

title_h1            = title_base + (title_aument*3)
title_h2            = title_base + (title_aument*2)
title_h3            = title_base + (title_aument*1)
title_h4            = title_base + (title_aument*0)
title_h5            = title_base - ceil(title_aument*.5)

title_h1_lh         = ceil( title_h1 * title_lineheight )
title_h2_lh         = ceil( title_h2 * title_lineheight )
title_h3_lh         = ceil( title_h3 * title_lineheight )
title_h4_lh         = ceil( title_h4 * title_lineheight )
title_h5_lh         = ceil( title_h5 * title_lineheight )


// Buttons

button_padding      = 6px 20px
button_padding_a    = 2px 10px
button_size         = global_size - 2
button_lineheight   = global_lh
button_radius       = rad_2
button_radius       = 40px
button_uppercase    = true
button_letterspacing= 2px



// Default cubic bezier
cb                  = cubic-bezier(0.77, 0, 0.175, 1)


// Bootstrap grid vars

$break              = 240px

$screen-sm          = $break * 2
$screen-md          = $break * 3
$screen-lg          = $break * 4

$break-sm           = "(min-width $screen-sm-min)"
$break-md           = "(min-width $screen-md-min)"
$break-lg           = "(min-width $screen-lg-min)"
$break-limit        = "(min-width " + limit + ")"

$grid-gutter-width  = sep

