

mixin article()

	article.article-default

		.article-image
			+img(400,300)

		.article-body
			//.article-category: a(href="#") Hola
			.article-date 24/23/223
			h3.article-title: a(href="single.html"): +lorem(5)
			p.article-description: +lorem(10)
			//.article-shares
				a(href="http://loremipsum.com",data-text="Lorem ipsum").share.share-facebook
				a(href="http://loremipsum.com",data-text="Lorem ipsum").share.share-twitter
				a(href="http://loremipsum.com",data-text="Lorem ipsum").share.share-linkedin
				a(href="http://loremipsum.com",data-text="Lorem ipsum",data-img="http://placeimg.com/400/600/any").share.share-pinterest
				a(href="http://loremipsum.com",data-text="Lorem ipsum").share.share-googleplus
				a(href="http://loremipsum.com",data-text="Lorem ipsum").share.share-whatsapp
			.article-footer
				a(href="single.html").button.button-cover Leer más


mixin articleCircle(link)

	article.article-circle
		.article-image
			.article-circle
				.bg
					+img(200,200)
		.article-body
			if !link
				h3.h4.article-title: +lorem(3)
				p.article-description: +lorem(10)
			else
				h3.h4.article-title: a(href="single.html"): +lorem(3)
				p.article-description: +lorem(10)
				a(href="single.html").button.button-cover Ver más

			.article-social
				a(href="#"): span.fa.fa-facebook
				a(href="#"): span.fa.fa-twitter
				a(href="#"): span.fa.fa-linkedin


